@model VendorPortal.Models.RoleDTO
@{
    ViewBag.Title = "AddRole";
    Layout = "~/Views/Shared/AdminView.cshtml";
}
<div class="form-horizontal">
    <div class="row">
        <div class="col-lg-12">
            <!--breadcrumbs start -->
            <ul class="breadcrumb">
                <li><a href="@Url.Action("ViewAllRoles")"><i class="fa fa-home"></i>&nbsp;User Management</a></li>
                <li><a href="@Url.Action("ViewAllRoles")">Manage User</a></li>
                <li class="active">Add Roles</li>
            </ul>
            <!--breadcrumbs end -->
        </div>
    </div>


    <section class="content">
        <div class="col-lg-12">
            <div class="box-body">
                <div class="col-md-12">
                    <div class="panel">

                        @using (Html.BeginForm())
            {
                            @Html.AntiForgeryToken()

                            <div class="row">
                                <div class="panel-body" style="text-align:left;">
                                    <div class="form-group">
                                        <div class="col-md-6 col-sm-6">
                                            <div class="col-md-12">
                                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                                @Html.LabelFor(model => model.RoleName, htmlAttributes: new { @class = "control-label col-md-4" })
                                                <div class="col-md-8">
                                                    @Html.EditorFor(model => model.RoleName,
               new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.RoleName,
               "",
               new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-sm-6">
                                            <div class="col-md-12">
                                                @*<input type="submit" value="Save" class="btn btn-default" />*@
                                                <button type="submit" class="btn btn-primary" id="btnSave">Save</button>
                                            </div>
                                        </div>




                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-12" style="text-align:center">

                                    @Html.ActionLink("Back to List", "ViewAllRoles")

                                </div>
                            </div>

                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {

        $("#btnSave").click(function (e) {

            if ($("#RoleName").val() == "") {
                alert("Please Enter Role Name");
                $("#RoleName").focus();
                e.preventDefault();
                return false;
            }
        });
    });
</script>