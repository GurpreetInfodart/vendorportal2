@{
    ViewBag.Title = "City";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/angular.js"></script>
<script src="~/Scripts/AngularSripts/City.js"></script>

<div ng-app="myApp">
    <div ng-controller="myCtrl" ng-init="GetAllData()">
        <div class="row">
            <div class="col-md-6">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Add City</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form role="form">
                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <label for="CityName">City Name:</label>
                                    <input type="text" class="form-control" id="CityName" placeholder="Enter City Name " ng-model="CityName">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label for="StateName">State Name :</label>
                                    <select class="form-control" id="StateName" ng-model="StateName">
                                        <option>---SELECT STATE---</option>
                                        <option>ANDHRA PRADESH</option>
                                        <option>ASSAM</option>
                                        <option>CHHATTISGARH</option>
                                        <option>GUJARAT</option>
                                        <option>HIMACHAL PRADESH</option>
                                        <option>JHARKHAND</option>
                                        <option>KERALA</option>
                                        <option>MAHARASHTRA</option>
                                        <option>MEGHALAYA</option>
                                        <option>NAGALAND</option>
                                        <option>PUNJAB</option>
                                        <option>SIKKIM</option>
                                        <option>TELANGANA</option>
                                        <option>UTTAR PRADESH</option>
                                        <option>WEST BENGAL</option>
                                        <option>ANDAMAN AND NICOBAR ISLANDS</option>
                                        <option>DADAR AND NAGAR HAVELI</option>
                                        <option>DELHI</option>
                                        <option>PUDUCHERRY</option>
                                        <option>ARUNACHAL PRADESH</option>
                                        <option>BIHAR</option>
                                        <option>GOA</option>
                                        <option>HARYANA</option>
                                        <option>JAMMU AND KASHMIR</option>
                                        <option>KARNATAKA</option>
                                        <option>MADHYA PRADESH</option>
                                        <option>MANIPUR</option>
                                        <option>MIZORAM</option>
                                        <option>ODISHA</option>
                                        <option>RAJASTHAN</option>
                                        <option>TAMIL NADU</option>
                                        <option>TRIPURA</option>
                                        <option>UTTARAKHAND</option>
                                        <option>CHANDIGARH</option>
                                        <option>DAMAN AND DIU</option>
                                        <option>LAKSHADWEEP</option>
                                    </select>

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Active &nbsp;&nbsp; </label>
                                    <input type="checkbox" class="icheckbox_flat" id="Active" placeholder="Active" ng-model="Active">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                </div>
                                <div class="col-md-2">
                                    <input type="button" id="btnSave" class="btn btn-primary" value="Submit" ng-click="InsertData()" />
                                </div>
                            </div>




                        </div>
                        <!-- /.box-body -->

                    </form>
                </div>
            </div>
            <div class="col-md-6">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">List of City</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="table-responsive">
                        <table id="example1" class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>City Name</th>
                                    <th>Sate Name</th>
                                    <th>Active</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="City in Cities">
                                    <td>{{City.CityId}}</td>
                                    <td>{{City.CityName}}</td>
                                    <td>{{City.StateName}}</td>
                                    <td>{{City.Active}}</td>
                                    <td>
                                        <input type="button" class="btn btn-warning" value="Update" ng-click="UpdateCity(City)" />
                                        <input type="button" class="btn btn-danger" value="Delete" ng-click="DeleteCity(City)" />
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>

            </div>
        </div>

    </div>
    @Html.Hidden("CityID_")

</div>


