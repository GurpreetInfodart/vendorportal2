<script type="text/javascript">
    $(document).ready(function (e) {

        $(function () {


            $('#SearchCreteria_Pen').change(function () {
                $('#SearchValue_Pen').val('');
                if ($('#SearchCreteria_Pen').val() == '') {
                    paging(1);
                }
            })

            $('#SearchCreteria_Ack').change(function () {
                $('#SearchValue_Ack').val('');
                if ($('#SearchCreteria_Ack').val() == '') {
                    paging2(1);
                }
            })

            $('#SearchCreteria_Dec').change(function () {
                $('#SearchValue_Dec').val('');
                if ($('#SearchCreteria_Dec').val() == '') {
                    paging3(1);
                }
            })

            $('#txtFromDate').datepicker({
                changeMonth: true,
                changeYear: true,
                format: "dd/mm/yyyy",
                language: "tr",
                autoclose: true
            });
            $('#txtToDate').datepicker({
                changeMonth: true,
                changeYear: true,
                format: "dd/mm/yyyy",
                language: "tr",
                autoclose: true
            });

            $('#txtAkFromDate').datepicker({
                changeMonth: true,
                changeYear: true,
                format: "dd/mm/yyyy",
                language: "tr",
                autoclose: true
            });
            $('#txtAkToDate').datepicker({
                changeMonth: true,
                changeYear: true,
                format: "dd/mm/yyyy",
                language: "tr",
                autoclose: true,
                
            });

            $('#txtDcFromDate').datepicker({
                changeMonth: true,
                changeYear: true,
                format: "dd/mm/yyyy",
                language: "tr",
                autoclose: true,
                setStartDate: '2012-01-01'
            });
            $('#txtDcToDate').datepicker({
                changeMonth: true,
                changeYear: true,
                format: "dd/mm/yyyy",
                language: "tr",
                autoclose: true
            });

            
        });

    });
    function ClearPending() {
        $("#txtFromDate").val("");
        $("#txtToDate").val("");
        paging(1);
    }

    function ClearAK() {
        $("#txtAkFromDate").val("");
        $("#txtAkToDate").val("");
        paging2(1);
    }
    function ClearDC() {
        $("#txtDcFromDate").val("");
        $("#txtDcToDate").val("");
        paging3(1);
    }
    function PendingDateFilter() {
        if ($("#txtFromDate").val() == "") {
            alert("Please Select From Date");
            $("#txtFromDate").focus();
            return false;
        }
        if ($("#txtToDate").val() == "") {
            alert("Please Select To Date");
            $("#txtToDate").focus();
            return false;
        }

        paging(1);        
    }

    function AkDateFilter() {
        if ($("#txtAkFromDate").val() == "") {
            alert("Please Select From Date");
            $("#txtAkFromDate").focus();
            return false;
        }
        if ($("#txtAkToDate").val() == "") {
            alert("Please Select To Date");
            $("#txtAkToDate").focus();
            return false;
        }

        paging2(1);
    }

    function DcDateFilter() {
        if ($("#txtDcFromDate").val() == "") {
            alert("Please Select From Date");
            $("#txtDcFromDate").focus();
            return false;
        }
        if ($("#txtDcToDate").val() == "") {
            alert("Please Select To Date");
            $("#txtDcToDate").focus();
            return false;
        }

        paging3(1);
    }

    /*************Paging**************/
    function paging(currentpage) {

        if (currentpage == NaN || currentpage <= 0) {
            return false;
        }
        $.ajax({

            url: "@Url.Action("BuyerPOPending", "BuyerPO")",
            type: 'GET',
            cache: false,
            data: { 'CurrentPage': parseInt(currentpage), 'fromDate': $("#txtFromDate").val(), 'toDate': $("#txtToDate").val(), 'SearchBy': $("#SearchCreteria_Pen").val(), 'SearchValue': $("#SearchValue_Pen").val() },
            success: function (data) {
                $('#GridDiv').html(data);
                $('.disabled').prop('disabled', true);
            },
        });
        return false;
    }

    function paging2(currentpage) {

        if (currentpage == NaN || currentpage <= 0) {
            return false;
        }
        $.ajax({

            url: "@Url.Action("BuyerPOAcknoledge", "BuyerPO")",
            type: 'GET',
            cache: false,
            data: { 'CurrentPage': parseInt(currentpage), 'fromDate': $("#txtAkFromDate").val(), 'toDate': $("#txtAkToDate").val(), 'SearchBy': $("#SearchCreteria_Ack").val(), 'SearchValue': $("#SearchValue_Ack").val() },
            success: function (data) {
                $('#GridDivAck').html(data);
                $('.disabled').prop('disabled', true);
            },
        });
        return false;
    }
    function paging3(currentpage) {

        if (currentpage == NaN || currentpage <= 0) {
            return false;
        }
        $.ajax({

            url: "@Url.Action("BuyerPODecline", "BuyerPO")",
            type: 'GET',
            cache: false,
            data: { 'CurrentPage': parseInt(currentpage), 'fromDate': $("#txtDcFromDate").val(), 'toDate': $("#txtDcToDate").val(), 'SearchBy': $("#SearchCreteria_Dec").val(), 'SearchValue': $("#SearchValue_Dec").val() },
            success: function (data) {
                $('#GridDivDec').html(data);
                $('.disabled').prop('disabled', true);
            },
        });
        return false;
    }


</script>