<script type="text/javascript">

    $(document).ready(function () {

        $('#SearchCreteria').change(function () {
            $('#SearchValue').val('');
            if ($('#SearchCreteria').val() == '') {
                paging(1);
            }
        })

        $('#txtFromDate').datepicker({
            changeMonth: true,
            changeYear: true,
            format: "dd/mm/yyyy",
            language: "tr",
            autoclose: true
        });
        $('#txtToDate').datepicker({
            changeMonth: true,
            changeYear: true,
            format: "dd/mm/yyyy",
            language: "tr",
            autoclose: true
        });

        //$(function () {

           // alert(6)
         //   paging(1, $("#HdnPONum").val());

        //});

        $("#btnApprove").click(function (e) {
            if (confirm('Are you sure wants to take action on this ?')) {
                GetApproved(e);
            }
        });

        $("#btnReject").click(function (e) {
            if (confirm('Are you sure wants to take action on this ?')) {
                GetReject(e);
            }
        });
    });


    function Clear() {
        $("#txtFromDate").val("");
        $("#txtToDate").val("");
        paging(1);
    }
    function PendingDateFilter() {
        if ($("#txtFromDate").val() == "") {
            alert("Please Select From Date");
            $("#txtFromDate").focus();
            return false;
        }
        if ($("#txtToDate").val() == "") {
            alert("Please Select To Date");
            $("#txtToDate").focus();
            return false;
        }
        $('#SearchValue').val('');
        paging(1);
    }

    function paging(currentpage) {
        var HdnPONum = $("#HdnPONum").val();
        var flg = $("#HdnFlag").val();
        if (currentpage == NaN || currentpage <= 0) {
            return false;
        }
        $.ajax({

            url: "@Url.Action("PODetail", "SupplierPO")",
            type: 'GET',
            cache: false,
            data: { 'CurrentPage': parseInt(currentpage), 'PO_Number': HdnPONum, 'flg': flg, 'fromDate': $("#txtFromDate").val(), 'toDate': $("#txtToDate").val(), 'SearchBy': $("#SearchCreteria").val(), 'SearchValue': $("#SearchValue").val() },
            success: function (data) {
                $('#GridDiv').html(data);
                $('.disabled').prop('disabled', true);
            },
        });
        return false;
    }

    function GetApproved(e) {

        if ($("#Remark").val() == "" || $("#Remark").val() == null) {
            alert("Please Enter Remark");
            e.preventDefault();
            return;
        }
        //  debugger;

        $.ajax({
            url: "@Url.Action("ApprovedPOUpdateStatus", "SupplierPO")",
            type: "GET",
        dataType: "JSON",
        data: { 'Remark': $("#Remark").val() },
        success: function (result) {
            alert("Status Updated Successfully");
            window.location.href='@Url.Action("Index", "SupplierPO")'
        }
    });
    }

    function GetReject(e) {

        if ($("#Remark").val() == "" || $("#Remark").val() == null) {
            alert("Please Enter Remark");
            e.preventDefault();
            return;
        }

        $.ajax({
            url: "@Url.Action("RejectPOUpdateStatus", "SupplierPO")",
            type: "GET",
        dataType: "JSON",
        data: { 'Remark': $("#Remark").val() },
        success: function (result) {
            alert("Status Updated Successfully");
            window.location.href='@Url.Action("Index", "SupplierPO")'
        }
    });
    }
</script>


